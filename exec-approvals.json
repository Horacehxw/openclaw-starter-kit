{
  "version": 1,
  "defaults": {
    "security": "allowlist",
    "ask": "on-miss",
    "askFallback": "deny",
    "autoAllowSkills": true
  },
  "agents": {
    "main": {
      "security": "allowlist",
      "ask": "on-miss",
      "allowlist": [
        { "pattern": "ls *" },
        { "pattern": "cat *" },
        { "pattern": "head *" },
        { "pattern": "tail *" },
        { "pattern": "grep *" },
        { "pattern": "find *" },
        { "pattern": "wc *" },
        { "pattern": "sort *" },
        { "pattern": "diff *" },
        { "pattern": "date *" },
        { "pattern": "echo *" },
        { "pattern": "pwd" },
        { "pattern": "whoami" },
        { "pattern": "df *" },
        { "pattern": "du *" },
        { "pattern": "ps *" },
        { "pattern": "free *" },
        { "pattern": "uname *" },
        { "pattern": "which *" },
        { "pattern": "realpath *" },
        { "pattern": "mkdir *" },
        { "pattern": "cp *" },
        { "pattern": "mv *" },
        { "pattern": "touch *" },
        { "pattern": "chmod *" },
        { "pattern": "tar *" },
        { "pattern": "zip *" },
        { "pattern": "unzip *" },
        { "pattern": "curl *" },
        { "pattern": "wget *" },
        { "pattern": "git *" },
        { "pattern": "python3 *" },
        { "pattern": "python *" },
        { "pattern": "pip *" },
        { "pattern": "pip3 *" },
        { "pattern": "node *" },
        { "pattern": "npm *" },
        { "pattern": "npx *" },
        { "pattern": "jq *" },
        { "pattern": "sed *" },
        { "pattern": "awk *" },
        { "pattern": "tee *" },
        { "pattern": "xargs *" },
        { "pattern": "bash *" },
        { "pattern": "sh *" },
        { "pattern": "openclaw *" },
        { "pattern": "clawdhub *" },
        { "pattern": "systemctl --user *" }
      ]
    }
  }
}
